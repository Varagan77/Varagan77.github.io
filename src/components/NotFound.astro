---
const message = "Oops! Page not found.";
---

<section class="not-found">
  <h1>404</h1>
  <p>{message}</p>
  <a href="/" class="back-home">Go Back Home</a>

  <style>
    .not-found {
      text-align: center;
      padding: 50px;
    }
    h1 {
      font-size: 4rem;
      color: red;
    }
    .back-home {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      background: #0073e6;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
  </style>
</section>